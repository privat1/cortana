<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="2DayCommandSet_en-us">
    <CommandPrefix> today </CommandPrefix>
    <Example> Open work folder </Example>

    <Command Name="openFolder">
      <Example> Open work folder </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> open [the] {folder} folder [in] </ListenFor>
      <Feedback> Opening {folder} </Feedback>
      <Navigate />
    </Command>

    <Command Name="openView">
      <Example> Open view today</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> open [the] {view} view [in] </ListenFor>
      <Feedback> Opening {view} </Feedback>
      <Navigate />
    </Command>

    <Command Name="openSmartView">
      <Example> Open urgent smart view </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> open [the] {smartview} smart view [dans] </ListenFor>
      <Feedback> Opening {smartview} </Feedback>
      <Navigate />
    </Command>

    <Command Name="openContext">
      <Example> Open phone context</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> open [the] {context} context [in] </ListenFor>
      <Feedback> Opening {context} </Feedback>
      <Navigate />
    </Command>

    <Command Name="openTag">
      <Example> Open work tag</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> open [the] {tag} tag [in] </ListenFor>
      <Feedback> Opening {tag} </Feedback>
      <Navigate />
    </Command>

    <Command Name="addTask">
      <Example> Add a task to buy bread </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> add a task [to] {speech} [in]</ListenFor>
      <Feedback> Adding the task </Feedback>
      <VoiceCommandService Target="VoiceCommandBackgroundService"/>
    </Command>

